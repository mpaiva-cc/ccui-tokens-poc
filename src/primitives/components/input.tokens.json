{
    "$description": "Input component tokens. These tokens compose primitive tokens into input-specific configurations for consistent form field styling across the design system.",
    "input": {
        "borderRadius": {
            "$description": "Default input border radius (4px). Use for consistent alignment with buttons.",
            "$type": "dimension",
            "$value": "{radius.sm}"
        },
        "borderWidth": {
            "$description": "Input border width (1px). Use for subtle borders; focus ring provides emphasis.",
            "$type": "dimension",
            "$value": "{borderWidth.thin}"
        },
        "color": {
            "$description": "Input component color tokens. These reference semantic color tokens for theme-aware styling.",
            "bg": {
                "default": {
                    "$description": "Default input background color.",
                    "$type": "color",
                    "$value": "{color.bg.surface.default}"
                },
                "disabled": {
                    "$description": "Disabled input background color.",
                    "$type": "color",
                    "$value": "{color.bg.interactive.disabled}"
                }
            },
            "border": {
                "default": {
                    "$description": "Default input border color.",
                    "$type": "color",
                    "$value": "{color.border.surface.default}"
                },
                "disabled": {
                    "$description": "Disabled input border color.",
                    "$type": "color",
                    "$value": "{color.border.interactive.disabled}"
                },
                "error": {
                    "$description": "Error state input border color.",
                    "$type": "color",
                    "$value": "{color.feedback.text.error}"
                },
                "focus": {
                    "$description": "Focused input border color.",
                    "$type": "color",
                    "$value": "{color.border.interactive.focus}"
                }
            },
            "ring": {
                "focus": {
                    "$description": "Focus ring glow color around input.",
                    "$type": "color",
                    "$value": "{color.focus.glow}"
                }
            },
            "text": {
                "default": {
                    "$description": "Input text color.",
                    "$type": "color",
                    "$value": "{color.text.default}"
                },
                "disabled": {
                    "$description": "Disabled input text color.",
                    "$type": "color",
                    "$value": "{color.text.disabled}"
                },
                "error": {
                    "$description": "Error message text color.",
                    "$type": "color",
                    "$value": "{color.feedback.text.error}"
                },
                "placeholder": {
                    "$description": "Input placeholder text color.",
                    "$type": "color",
                    "$value": "{color.text.placeholder}"
                }
            }
        },
        "focus": {
            "ringOffset": {
                "$description": "Focus ring offset from input border.",
                "$value": "{focus.ring.offset}"
            },
            "ringWidth": {
                "$description": "Focus ring width for inputs.",
                "$value": "{focus.ring.width}"
            }
        },
        "fontSize": {
            "$description": "Input font sizes for each size variant. Use md (16px) minimum for accessibility.",
            "lg": {
                "$description": "Large input font size.",
                "$value": "{fontSizes.md}"
            },
            "md": {
                "$description": "Medium input font size. DEFAULT.",
                "$value": "{fontSizes.md}"
            },
            "sm": {
                "$description": "Small input font size.",
                "$value": "{fontSizes.sm}"
            },
            "xl": {
                "$description": "Extra large input font size.",
                "$value": "{fontSizes.lg}"
            },
            "xs": {
                "$description": "Extra small input font size.",
                "$value": "{fontSizes.xs}"
            }
        },
        "height": {
            "$description": "Input height values mapped from sizing primitives.",
            "lg": {
                "$description": "Large input height. Use for prominent inputs.",
                "$value": "{sizing.controlHeight.lg}"
            },
            "md": {
                "$description": "Medium input height. DEFAULT for most inputs.",
                "$value": "{sizing.controlHeight.md}"
            },
            "sm": {
                "$description": "Small input height. Use for secondary inputs.",
                "$value": "{sizing.controlHeight.sm}"
            },
            "xl": {
                "$description": "Extra large input height. Use for marketing forms.",
                "$value": "{sizing.controlHeight.xl}"
            },
            "xs": {
                "$description": "Extra small input height. Use for compact forms.",
                "$value": "{sizing.controlHeight.xs}"
            }
        },
        "lineHeight": {
            "$description": "Input line height for proper text alignment.",
            "$type": "number",
            "$value": "{lineHeights.md}"
        },
        "padding": {
            "$type": "dimension",
            "horizontal": {
                "lg": {
                    "$description": "Large horizontal padding (16px). Use for prominent form fields.",
                    "$value": "{spacing.md}"
                },
                "md": {
                    "$description": "Medium horizontal padding (12px). Use for standard inputs. DEFAULT.",
                    "$value": "{spacing.sm}"
                },
                "sm": {
                    "$description": "Small horizontal padding (12px). Use for secondary form fields.",
                    "$value": "{spacing.sm}"
                },
                "xl": {
                    "$description": "Extra large horizontal padding (16px). Use for marketing forms.",
                    "$value": "{spacing.md}"
                },
                "xs": {
                    "$description": "Extra small horizontal padding (8px). Use for compact form inputs.",
                    "$value": "{spacing.xs}"
                }
            }
        },
        "transition": {
            "duration": {
                "$description": "Input transition duration for focus/hover states.",
                "$value": "{motion.duration.fast}"
            },
            "easing": {
                "$description": "Input transition easing curve.",
                "$value": "{motion.easing.easeOut}"
            }
        }
    }
}
