{
    "$description": "Button component tokens. These tokens compose primitive tokens into button-specific configurations for consistent button styling across the design system.",
    "button": {
        "borderRadius": {
            "$description": "Default button border radius (4px). Use for consistent alignment with inputs.",
            "$type": "dimension",
            "$value": "{radius.sm}"
        },
        "color": {
            "$description": "Button component color tokens. These reference semantic color tokens for theme-aware styling.",
            "bg": {
                "default": {
                    "default": {
                        "$description": "Default button background color.",
                        "$type": "color",
                        "$value": "{color.bg.surface.default}"
                    },
                    "hover": {
                        "$description": "Default button hover background color.",
                        "$type": "color",
                        "$value": "{color.bg.surface.elevated}"
                    }
                },
                "disabled": {
                    "$description": "Disabled button background color.",
                    "$type": "color",
                    "$value": "{color.bg.interactive.disabled}"
                },
                "filled": {
                    "default": {
                        "$description": "Filled button background color.",
                        "$type": "color",
                        "$value": "{color.action.bg.primary.default}"
                    },
                    "hover": {
                        "$description": "Filled button hover background color.",
                        "$type": "color",
                        "$value": "{color.action.bg.primary.hover}"
                    }
                },
                "light": {
                    "default": {
                        "$description": "Light button background color.",
                        "$type": "color",
                        "$value": "{color.action.bg.light.default}"
                    },
                    "hover": {
                        "$description": "Light button hover background color.",
                        "$type": "color",
                        "$value": "{color.action.bg.light.hover}"
                    }
                },
                "outline": {
                    "hover": {
                        "$description": "Outline button hover background color.",
                        "$type": "color",
                        "$value": "{color.action.bg.light.default}"
                    }
                },
                "subtle": {
                    "default": {
                        "$description": "Subtle button background color. Transparent by default.",
                        "$type": "color",
                        "$value": "transparent"
                    },
                    "hover": {
                        "$description": "Subtle button hover background color.",
                        "$type": "color",
                        "$value": "{color.action.bg.light.default}"
                    }
                }
            },
            "border": {
                "default": {
                    "$description": "Default button border color.",
                    "$type": "color",
                    "$value": "{color.border.surface.default}"
                },
                "disabled": {
                    "$description": "Disabled button border color.",
                    "$type": "color",
                    "$value": "{color.border.interactive.disabled}"
                },
                "outline": {
                    "$description": "Outline button border color.",
                    "$type": "color",
                    "$value": "{color.action.border.primary.default}"
                }
            },
            "text": {
                "default": {
                    "$description": "Default button text color.",
                    "$type": "color",
                    "$value": "{color.text.onDefault}"
                },
                "disabled": {
                    "$description": "Disabled button text color.",
                    "$type": "color",
                    "$value": "{color.text.disabled}"
                },
                "filled": {
                    "$description": "Filled button text color for contrast on action background.",
                    "$type": "color",
                    "$value": "{color.action.text.primary}"
                },
                "light": {
                    "$description": "Light button text color.",
                    "$type": "color",
                    "$value": "{color.action.text.light}"
                },
                "outline": {
                    "$description": "Outline button text color.",
                    "$type": "color",
                    "$value": "{color.action.text.onSurface}"
                },
                "subtle": {
                    "$description": "Subtle button text color.",
                    "$type": "color",
                    "$value": "{color.action.text.onSurface}"
                }
            }
        },
        "fontSize": {
            "$description": "Button font sizes for each size variant.",
            "lg": {
                "$description": "Large button font size.",
                "$value": "{fontSizes.md}"
            },
            "md": {
                "$description": "Medium button font size. Uses sm for better proportions.",
                "$value": "{fontSizes.sm}"
            },
            "sm": {
                "$description": "Small button font size.",
                "$value": "{fontSizes.sm}"
            },
            "xl": {
                "$description": "Extra large button font size.",
                "$value": "{fontSizes.md}"
            },
            "xs": {
                "$description": "Extra small button font size.",
                "$value": "{fontSizes.xs}"
            }
        },
        "fontWeight": {
            "$description": "Button font weight. Semibold for clear affordance.",
            "$type": "fontWeight",
            "$value": "{fontWeights.semibold}"
        },
        "height": {
            "$description": "Button height values mapped from sizing primitives.",
            "lg": {
                "$description": "Large button height. Use for prominent CTAs.",
                "$value": "{sizing.controlHeight.lg}"
            },
            "md": {
                "$description": "Medium button height. DEFAULT for most buttons.",
                "$value": "{sizing.controlHeight.md}"
            },
            "sm": {
                "$description": "Small button height. Use for secondary actions, compact layouts.",
                "$value": "{sizing.controlHeight.sm}"
            },
            "xl": {
                "$description": "Extra large button height. Use for marketing CTAs.",
                "$value": "{sizing.controlHeight.xl}"
            },
            "xs": {
                "$description": "Extra small button height. Use for inline actions, compact toolbars.",
                "$value": "{sizing.controlHeight.xs}"
            }
        },
        "padding": {
            "$type": "dimension",
            "horizontal": {
                "lg": {
                    "$description": "Large horizontal padding (24px). Use for prominent CTA buttons.",
                    "$value": "{spacing.lg}"
                },
                "md": {
                    "$description": "Medium horizontal padding (16px). Use for standard buttons. DEFAULT.",
                    "$value": "{spacing.md}"
                },
                "sm": {
                    "$description": "Small horizontal padding (12px). Use for secondary action buttons.",
                    "$value": "{spacing.sm}"
                },
                "xl": {
                    "$description": "Extra large horizontal padding (32px). Use for marketing buttons.",
                    "$value": "{spacing.xl}"
                },
                "xs": {
                    "$description": "Extra small horizontal padding (8px). Use for compact icon buttons.",
                    "$value": "{spacing.xs}"
                }
            }
        },
        "transition": {
            "duration": {
                "$description": "Button transition duration for hover/active states.",
                "$value": "{motion.duration.fast}"
            },
            "easing": {
                "$description": "Button transition easing curve.",
                "$value": "{motion.easing.easeOut}"
            }
        }
    }
}
