{
    "$description": "Card component tokens. These tokens compose primitive tokens into card-specific configurations for consistent card styling across the design system.",
    "card": {
        "padding": {
            "$type": "dimension",
            "xs": {
                "$value": "{spacing.xs}",
                "$description": "Extra small card padding"
            },
            "sm": {
                "$value": "{spacing.sm}",
                "$description": "Small card padding"
            },
            "md": {
                "$value": "{spacing.md}",
                "$description": "Medium card padding. DEFAULT."
            },
            "lg": {
                "$value": "{spacing.lg}",
                "$description": "Large card padding"
            },
            "xl": {
                "$value": "{spacing.xl}",
                "$description": "Extra large card padding"
            }
        },
        "borderRadius": {
            "$value": "{radius.md}",
            "$type": "dimension",
            "$description": "Card border radius"
        },
        "borderWidth": {
            "$value": "{borderWidth.thin}",
            "$type": "dimension",
            "$description": "Card border width"
        },
        "shadow": {
            "$description": "Card shadow variants",
            "none": {
                "$value": "none",
                "$description": "No shadow. Use for flat card variants or on dark backgrounds."
            },
            "sm": {
                "$value": "{shadow.sm}",
                "$description": "Small card shadow for subtle elevation"
            },
            "md": {
                "$value": "{shadow.md}",
                "$description": "Medium card shadow. DEFAULT."
            },
            "lg": {
                "$value": "{shadow.lg}",
                "$description": "Large card shadow for prominent elevation"
            }
        },
        "section": {
            "$description": "Card section configuration",
            "padding": {
                "$value": "{spacing.md}",
                "$type": "dimension",
                "$description": "Card section padding"
            },
            "gap": {
                "$value": "{spacing.md}",
                "$type": "dimension",
                "$description": "Gap between card sections"
            }
        },
        "transition": {
            "duration": {
                "$value": "{motion.duration.normal}",
                "$description": "Card hover/interaction transition duration"
            },
            "easing": {
                "$value": "{motion.easing.easeOut}",
                "$description": "Card transition easing"
            }
        }
    }
}
