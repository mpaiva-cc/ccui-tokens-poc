        "$value": "{color/black}",
        "$description": "Primary text color - maximum contrast."
      },
      "secondary": {
        "$value": "{color/gray/800}",
        "$description": "Secondary text color - higher contrast than normal light theme."
      },
      "tertiary": {
        "$value": "{color/gray/700}",
        "$description": "Tertiary text color - meets AAA requirements."
