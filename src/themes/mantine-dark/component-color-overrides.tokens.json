{
    "$description": "Dark theme component color overrides. Only tokens that differ from the light theme defaults defined in src/primitives/components/ are listed here.",
    "switch": {
        "color": {
            "track": {
                "off": {
                    "$value": "{color.bg.surface.muted}",
                    "$type": "color",
                    "$description": "Off state track background color."
                }
            },
            "thumb": {
                "off": {
                    "$value": "{color.text.default}",
                    "$type": "color",
                    "$description": "Switch thumb color."
                },
                "on": {
                    "$value": "{color.white}",
                    "$type": "color",
                    "$description": "Switch thumb color when on."
                },
                "disabled": {
                    "$value": "{color.text.disabled}",
                    "$type": "color",
                    "$description": "Disabled switch thumb color."
                }
            }
        }
    },
    "select": {
        "color": {
            "dropdown": {
                "bg": {
                    "$value": "{color.bg.surface.elevated}",
                    "$type": "color",
                    "$description": "Dropdown menu background color."
                }
            }
        }
    }
}
