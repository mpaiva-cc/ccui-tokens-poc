{
  "input": {
    "height": {
      "xs": {
        "$type": "dimension",
        "$value": "{sizing.input.xs}",
        "$description": "Extra small input height. Use for compact forms."
      },
      "sm": {
        "$type": "dimension",
        "$value": "{sizing.input.sm}",
        "$description": "Small input height. Use for secondary inputs."
      },
      "md": {
        "$type": "dimension",
        "$value": "{sizing.input.md}",
        "$description": "Medium input height. DEFAULT for most inputs."
      },
      "lg": {
        "$type": "dimension",
        "$value": "{sizing.input.lg}",
        "$description": "Large input height. Use for prominent inputs."
      },
      "xl": {
        "$type": "dimension",
        "$value": "{sizing.input.xl}",
        "$description": "Extra large input height. Use for marketing forms."
      }
    },
    "padding": {
      "x": {
        "xs": {
          "$type": "dimension",
          "$value": "{spacing.xs}",
          "$description": "Extra small horizontal padding (8px). Use for compact form inputs."
        },
        "sm": {
          "$type": "dimension",
          "$value": "{spacing.sm}",
          "$description": "Small horizontal padding (12px). Use for secondary form fields."
        },
        "md": {
          "$type": "dimension",
          "$value": "{spacing.sm}",
          "$description": "Medium horizontal padding (12px). Use for standard inputs. DEFAULT."
        },
        "lg": {
          "$type": "dimension",
          "$value": "{spacing.md}",
          "$description": "Large horizontal padding (16px). Use for prominent form fields."
        },
        "xl": {
          "$type": "dimension",
          "$value": "{spacing.md}",
          "$description": "Extra large horizontal padding (16px). Use for marketing forms."
        }
      }
    },
    "borderRadius": {
      "$type": "dimension",
      "$value": "{radius.sm}",
      "$description": "Default input border radius (4px). Use for consistent alignment with buttons."
    },
    "borderWidth": {
      "$type": "dimension",
      "$value": "{borderWidth.thin}",
      "$description": "Input border width (1px). Use for subtle borders; focus ring provides emphasis."
    },
    "fontSize": {
      "xs": {
        "$type": "dimension",
        "$value": "{typography.fontSize.xs}",
        "$description": "Extra small input font size."
      },
      "sm": {
        "$type": "dimension",
        "$value": "{typography.fontSize.sm}",
        "$description": "Small input font size."
      },
      "md": {
        "$type": "dimension",
        "$value": "{typography.fontSize.md}",
        "$description": "Medium input font size. DEFAULT."
      },
      "lg": {
        "$type": "dimension",
        "$value": "{typography.fontSize.md}",
        "$description": "Large input font size."
      },
      "xl": {
        "$type": "dimension",
        "$value": "{typography.fontSize.lg}",
        "$description": "Extra large input font size."
      }
    },
    "lineHeight": {
      "$type": "number",
      "$value": "{typography.lineHeight.md}",
      "$description": "Input line height for proper text alignment."
    },
    "transition": {
      "duration": {
        "$type": "duration",
        "$value": "{motion.duration.fast}",
        "$description": "Input transition duration for focus/hover states."
      },
      "easing": {
        "$type": "other",
        "$value": "{motion.easing.easeOut}",
        "$description": "Input transition easing curve."
      }
    },
    "focus": {
      "ringWidth": {
        "$type": "dimension",
        "$value": "{focus.ring.width}",
        "$description": "Focus ring width for inputs."
      },
      "ringOffset": {
        "$type": "dimension",
        "$value": "{focus.ring.offset}",
        "$description": "Focus ring offset from input border."
      }
    }
  }
}