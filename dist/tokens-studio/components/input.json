{
  "input": {
    "borderRadius": {
      "$value": "{radius.sm}",
      "$type": "dimension",
      "$description": "input.borderRadius — Default input border radius (4px). Use for consistent alignment with buttons."
    },
    "borderWidth": {
      "$value": "{borderWidth.thin}",
      "$type": "dimension",
      "$description": "input.borderWidth — Input border width (1px). Use for subtle borders; focus ring provides emphasis."
    },
    "color": {
      "bg": {
        "default": {
          "$value": "{color.bg.surface.default}",
          "$type": "color",
          "$description": "input.color.bg.default — Default input background color."
        },
        "disabled": {
          "$value": "{color.bg.interactive.disabled}",
          "$type": "color",
          "$description": "input.color.bg.disabled — Disabled input background color."
        }
      },
      "border": {
        "default": {
          "$value": "{color.border.surface.default}",
          "$type": "color",
          "$description": "input.color.border.default — Default input border color."
        },
        "disabled": {
          "$value": "{color.border.interactive.disabled}",
          "$type": "color",
          "$description": "input.color.border.disabled — Disabled input border color."
        },
        "error": {
          "$value": "{color.feedback.text.error}",
          "$type": "color",
          "$description": "input.color.border.error — Error state input border color."
        },
        "focus": {
          "$value": "{color.border.interactive.focus}",
          "$type": "color",
          "$description": "input.color.border.focus — Focused input border color."
        }
      },
      "ring": {
        "focus": {
          "$value": "{color.focus.glow}",
          "$type": "color",
          "$description": "input.color.ring.focus — Focus ring glow color around input."
        }
      },
      "text": {
        "default": {
          "$value": "{color.text.default}",
          "$type": "color",
          "$description": "input.color.text.default — Input text color."
        },
        "disabled": {
          "$value": "{color.text.disabled}",
          "$type": "color",
          "$description": "input.color.text.disabled — Disabled input text color."
        },
        "error": {
          "$value": "{color.feedback.text.error}",
          "$type": "color",
          "$description": "input.color.text.error — Error message text color."
        },
        "placeholder": {
          "$value": "{color.text.placeholder}",
          "$type": "color",
          "$description": "input.color.text.placeholder — Input placeholder text color."
        }
      }
    },
    "focus": {
      "ringOffset": {
        "$value": "{focus.ring.offset}",
        "$type": "dimension",
        "$description": "input.focus.ringOffset — Focus ring offset from input border."
      },
      "ringWidth": {
        "$value": "{focus.ring.width}",
        "$type": "dimension",
        "$description": "input.focus.ringWidth — Focus ring width for inputs."
      }
    },
    "fontSize": {
      "lg": {
        "$value": "{fontSizes.md}",
        "$type": "dimension",
        "$description": "input.fontSize.lg — Large input font size."
      },
      "md": {
        "$value": "{fontSizes.md}",
        "$type": "dimension",
        "$description": "input.fontSize.md — Medium input font size. DEFAULT."
      },
      "sm": {
        "$value": "{fontSizes.sm}",
        "$type": "dimension",
        "$description": "input.fontSize.sm — Small input font size."
      },
      "xl": {
        "$value": "{fontSizes.lg}",
        "$type": "dimension",
        "$description": "input.fontSize.xl — Extra large input font size."
      },
      "xs": {
        "$value": "{fontSizes.xs}",
        "$type": "dimension",
        "$description": "input.fontSize.xs — Extra small input font size."
      }
    },
    "height": {
      "lg": {
        "$value": "{sizing.controlHeight.lg}",
        "$type": "dimension",
        "$description": "input.height.lg — Large input height. Use for prominent inputs."
      },
      "md": {
        "$value": "{sizing.controlHeight.md}",
        "$type": "dimension",
        "$description": "input.height.md — Medium input height. DEFAULT for most inputs."
      },
      "sm": {
        "$value": "{sizing.controlHeight.sm}",
        "$type": "dimension",
        "$description": "input.height.sm — Small input height. Use for secondary inputs."
      },
      "xl": {
        "$value": "{sizing.controlHeight.xl}",
        "$type": "dimension",
        "$description": "input.height.xl — Extra large input height. Use for marketing forms."
      },
      "xs": {
        "$value": "{sizing.controlHeight.xs}",
        "$type": "dimension",
        "$description": "input.height.xs — Extra small input height. Use for compact forms."
      }
    },
    "lineHeight": {
      "$value": "{lineHeights.md}",
      "$type": "dimension",
      "$description": "input.lineHeight — Input line height for proper text alignment."
    },
    "padding": {
      "horizontal": {
        "lg": {
          "$value": "{spacing.md}",
          "$type": "dimension",
          "$description": "input.padding.horizontal.lg — Large horizontal padding (16px). Use for prominent form fields."
        },
        "md": {
          "$value": "{spacing.sm}",
          "$type": "dimension",
          "$description": "input.padding.horizontal.md — Medium horizontal padding (12px). Use for standard inputs. DEFAULT."
        },
        "sm": {
          "$value": "{spacing.sm}",
          "$type": "dimension",
          "$description": "input.padding.horizontal.sm — Small horizontal padding (12px). Use for secondary form fields."
        },
        "xl": {
          "$value": "{spacing.md}",
          "$type": "dimension",
          "$description": "input.padding.horizontal.xl — Extra large horizontal padding (16px). Use for marketing forms."
        },
        "xs": {
          "$value": "{spacing.xs}",
          "$type": "dimension",
          "$description": "input.padding.horizontal.xs — Extra small horizontal padding (8px). Use for compact form inputs."
        }
      }
    },
    "transition": {
      "duration": {
        "$value": "{motion.duration.fast}",
        "$type": "duration",
        "$description": "input.transition.duration — Input transition duration for focus/hover states."
      },
      "easing": {
        "$value": "{motion.easing.easeOut}",
        "$description": "input.transition.easing — Input transition easing curve."
      }
    }
  }
}