{
  "modal": {
    "padding": {
      "header": {
        "$value": "{spacing.500}",
        "$type": "dimension",
        "$description": "Modal header padding (20px)."
      },
      "body": {
        "$value": "{spacing.500}",
        "$type": "dimension",
        "$description": "Modal body padding (20px)."
      },
      "footer": {
        "$value": "{spacing.400}",
        "$type": "dimension",
        "$description": "Modal footer padding (16px)."
      }
    },
    "radius": {
      "$value": "{radius.800}",
      "$type": "dimension",
      "$description": "Modal border radius (16px)."
    },
    "width": {
      "xs": {
        "$value": "20rem",
        "$type": "dimension",
        "$description": "Extra small modal width (320px)."
      },
      "sm": {
        "$value": "25rem",
        "$type": "dimension",
        "$description": "Small modal width (400px)."
      },
      "md": {
        "$value": "32.5rem",
        "$type": "dimension",
        "$description": "Medium modal width (520px). DEFAULT."
      },
      "lg": {
        "$value": "45rem",
        "$type": "dimension",
        "$description": "Large modal width (720px)."
      },
      "xl": {
        "$value": "60rem",
        "$type": "dimension",
        "$description": "Extra large modal width (960px)."
      }
    },
    "overlay": {
      "opacity": {
        "$value": "{opacity.overlay}",
        "$type": "number",
        "$description": "Modal backdrop opacity."
      }
    },
    "transition": {
      "duration": {
        "$value": "{motion.duration.normal}",
        "$type": "duration",
        "$description": "Modal transition duration."
      },
      "easing": {
        "enter": {
          "$value": "{motion.easing.ease-out}",
          "$type": "cubicBezier",
          "$description": "Modal entrance easing."
        },
        "exit": {
          "$value": "{motion.easing.ease-in}",
          "$type": "cubicBezier",
          "$description": "Modal exit easing."
        }
      }
    },
    "z-index": {
      "$value": "{z-index.modal}",
      "$type": "number",
      "$description": "Modal z-index."
    },
    "title": {
      "font-size": {
        "$value": "{typography.font-size.400}",
        "$type": "dimension",
        "$description": "Modal title font size (18px)."
      },
      "font-weight": {
        "$value": "{typography.font-weight.semibold}",
        "$type": "fontWeight",
        "$description": "Modal title font weight."
      },
      "line-height": {
        "$value": "{typography.line-height.snug}",
        "$type": "number",
        "$description": "Modal title line height."
      }
    }
  }
}